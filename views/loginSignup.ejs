<%- include('partials/header'); %>
<h3 class="welcome"><a  href="/">Welcome to Matrix Master community</a> </h3><br>
<div class="logSign">

    <form id="login" method="POST">
        <h1>Log In</h1><br>
        <label for="email">Email</label>
        <input type="text" name="email" required />
        <div class="emailLogin error"></div>

        <label for="password">Password</label>
        <input type="password" name="password" required />
        <div class="passwordLogin error"></div>

        <button type="submit" class="loginBtn">Log In</button>
    </form>
    <%- include('./partials/loginform.ejs') %> 

    <form id="signup" method="POST">
        <h1>Sign Up</h1><br>
        <label for="username">User Name</label>
        <input type="text" name="username" required>
        <div class="username error"></div>

        <label for="email">Email</label>
        <input type="text" name="email" required />
        <div class="email error"></div>
        
        <label for="password">Password</label>
        <input type="password" name="password" required />
        <div class="password error"></div>

        <label for="password">Repeat Password</label>
        <input type="password" name="repeatPw" required />
        <div class="repeat_passwordLogin error"></div>
        
        <button type="submit">Sign Up</button>
    </form>
</div>

<%- include('./partials/signupform.ejs') %> 




<%- include('partials/footer'); %>